<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E2449"
    tools:context=".VueHistoire">

    <Button
        android:id="@+id/buttonChoix1"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/aldrich"
        android:tag="0"
        android:text="Aller vers la ville."
        android:textColor="#000000"
        android:textSize="10sp"
        app:backgroundTint="#03A9F4"
        app:layout_constraintBottom_toTopOf="@+id/buttonChoix2"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="#000000" />

    <Button
        android:id="@+id/buttonChoix2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/aldrich"
        android:tag="1"
        android:text="Prendre chemin forestier"
        android:textColor="#000000"
        android:textSize="10sp"
        app:backgroundTint="#03A9F4"
        app:layout_constraintBottom_toTopOf="@+id/buttonChoix3"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="#000000" />

    <Button
        android:id="@+id/buttonChoix3"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/aldrich"
        android:tag="2"
        android:text="Aller vers la vielle maison au loin."
        android:textColor="#000000"
        android:textSize="10sp"
        app:backgroundTint="#03A9F4"
        app:layout_constraintBottom_toTopOf="@+id/buttonMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="#000000" />

    <Button
        android:id="@+id/buttonMenu"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/aldrich"
        android:text="@string/page_titre"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#1093CD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="#000000" />

    <ImageView
        android:id="@+id/imageRaceChapitre"
        android:layout_width="416dp"
        android:layout_height="385dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/dinoh" />

    <TextView
        android:id="@+id/NumeroChapitre"
        android:layout_width="200dp"
        android:layout_height="62dp"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:shadowColor="#040202"
        android:text="1"
        android:textColor="#AE5959"
        android:textSize="44sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/texteChapitre"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/texteChapitre"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:fontFamily="@font/aldrich"
        android:gravity="right|center_vertical"
        android:shadowColor="#040202"
        android:text="@string/chapitre"
        android:textColor="#AE5959"
        android:textSize="44sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/NumeroChapitre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contenueChapitre"
        android:layout_width="406dp"
        android:layout_height="485dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/aldrich"
        android:shadowColor="#000000"
        android:shadowRadius="60"
        android:text="Vous arrivez dans la ville De Mayale. La seule place que vous pourriez trouver des informations est dans le bar de guerriers. Vous rentrez dans le bar et vous trouvez plusieurs Dinos venant d’autres régions. Avec désespoir vous leur demandez de l’aide mais hélas, ils ne savent rien de ces nouvelles créatures et puisque que cette région n’a pas été attaquée. Pendant que vous parlez, la ville se fait frapper par les envahisseurs. Certains Dinos dans le bar part au combat tandis qu'un dit connaitre un chemin secret pour s’échapper. Il n’inspire pas confiance mais vous n’êtes pas un combattant né non plus."
        android:textColor="#EFBFBF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NumeroChapitre" />

</androidx.constraintlayout.widget.ConstraintLayout>