<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E2449"
    tools:context=".DimensionCiblées">

    <Button
        android:id="@+id/buttonDimensions"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="202dp"
        android:layout_height="53dp"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/aldrich"
        android:text="Choix personnage"
        android:textColor="#000000"
        android:textSize="15sp"
        app:backgroundTint="#03A9F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#000000" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="345dp"
        android:layout_height="170dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:shadowColor="#040202"
        android:text="Dimensions ciblées"
        android:textColor="#AE5959"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="322dp"
        android:layout_height="320dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.763">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="111dp"
                android:layout_height="92dp"
                app:srcCompat="@drawable/portail3" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="142dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/aldrich"
                android:text="La dimension des Dinos Attaqué par le commandant Kalameth"
                android:textColor="#1886F7"
                android:textSize="15sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="110dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/oie_transparent_1_" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="216dp"
                android:layout_height="76dp"
                android:fontFamily="@font/aldrich"
                android:text="La dimension des V.I.A. Attaqué par le commandant Alpha"
                android:textColor="#CDB1B1"
                android:textSize="15sp" />
        </TableRow>

        <TableRow
            android:layout_width="380dp"
            android:layout_height="140dp">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="117dp"
                android:layout_height="119dp"
                app:srcCompat="@drawable/oie_transparent_2_" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="216dp"
                android:layout_height="84dp"
                android:fontFamily="@font/aldrich"
                android:text="La dimension des Kaqchikam Attaqué par le commandant Bastillee"
                android:textColor="#CDB1B1"
                android:textSize="15sp" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>