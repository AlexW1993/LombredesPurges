<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E2449"
    tools:context=".VueMenuAventures" >

    <TextView
        android:id="@+id/textView13"
        android:layout_width="402dp"
        android:layout_height="162dp"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:shadowColor="#000000"
        android:text="choisissez votre aventure"
        android:textAllCaps="true"
        android:textColor="#CDD1EA"
        android:textColorHighlight="#3F51B5"
        android:textColorHint="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonAventuresPurges"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonAventuresPurges"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/aldrich"
        android:text="l'ombre des purges"
        android:textColor="#000000"
        android:textSize="24sp"
        app:backgroundTint="#03A9F4"
        app:layout_constraintBottom_toTopOf="@+id/buttonAutresAventures"
        app:layout_constraintEnd_toEndOf="@+id/textView13"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:strokeColor="#000000" />

    <Button
        android:id="@+id/buttonAutresAventures"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/aldrich"
        android:text="autres aventures"
        android:textColor="#000000"
        android:textSize="24sp"
        app:backgroundTint="#03A9F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonAventuresPurges"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/buttonAventuresPurges"
        app:strokeColor="#000000" />

</androidx.constraintlayout.widget.ConstraintLayout>