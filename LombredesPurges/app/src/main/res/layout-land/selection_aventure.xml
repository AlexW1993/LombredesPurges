<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E2449"
    tools:context=".SelectionAventure">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="283dp"
        android:layout_height="202dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:shadowColor="#040202"
        android:text="@string/s_lection_aventure"
        android:textColor="#AE5959"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497" />

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="279dp"
        android:layout_height="323dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView17"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/buttonVIA"
            android:layout_width="271dp"
            android:layout_height="99dp"
            android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/aldrich"
            android:text="@string/dimension_des_v_i_a"
            android:textColor="#000000"
            android:textSize="18sp"
            app:backgroundTint="#2994C5" />

        <Button
            android:id="@+id/buttonKaqchikam"
            android:layout_width="271dp"
            android:layout_height="99dp"
            android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/aldrich"
            android:text="@string/dimension_des_kaqchikam"
            android:textColor="#000000"
            android:textSize="18sp"
            app:backgroundTint="#2994C5" />

        <Button
            android:id="@+id/buttonDino"
            android:layout_width="271dp"
            android:layout_height="99dp"
            android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/aldrich"
            android:text="@string/dimension_des_dinos"
            android:textColor="#000000"
            android:textSize="18sp"
            app:backgroundTint="#2994C5" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>