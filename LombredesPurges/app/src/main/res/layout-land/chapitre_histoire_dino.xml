<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E2449"
    tools:context=".VueChapitreDino">

    <ImageView
        android:id="@+id/imageRaceChapitreDino"
        android:layout_width="416dp"
        android:layout_height="385dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/dinoh" />

    <TextView
        android:id="@+id/contenueChapitreDino"
        android:layout_width="500dp"
        android:layout_height="325dp"
        android:fontFamily="@font/aldrich"
        android:shadowColor="#000000"
        android:shadowRadius="60"
        android:text="Vous arrivez dans la ville De Mayale. La seule place que vous pourriez trouver des informations est dans le bar de guerriers. Vous rentrez dans le bar et vous trouvez plusieurs Dinos venant d’autres régions. Avec désespoir vous leur demandez de l’aide mais hélas, ils ne savent rien de ces nouvelles créatures et puisque que cette région n’a pas été attaquée. Pendant que vous parlez, la ville se fait frapper par les envahisseurs. Certains Dinos dans le bar part au combat tandis qu'un dit connaitre un chemin secret pour s’échapper. Il n’inspire pas confiance mais vous n’êtes pas un combattant né non plus."
        android:textColor="#EFBFBF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="169dp"
        android:layout_height="222dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/buttonChoix1Dino"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/aldrich"
            android:text="Aller vers la ville."
            android:textColor="#000000"
            android:textSize="10sp"
            app:backgroundTint="#03A9F4"
            app:strokeColor="#000000" />

        <Button
            android:id="@+id/buttonChoix2Dino"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/aldrich"
            android:text="Prendre chemin forestier"
            android:textColor="#000000"
            android:textSize="10sp"
            app:backgroundTint="#03A9F4"
            app:strokeColor="#000000" />

        <Button
            android:id="@+id/buttonChoix3Dino"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/aldrich"
            android:text="Aller vers la vielle maison au loin."
            android:textColor="#000000"
            android:textSize="10sp"
            app:backgroundTint="#03A9F4"
            app:strokeColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="447dp"
        android:layout_height="67dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/contenueChapitreDino"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout11"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/texteChapitreDino"
            android:layout_width="220dp"
            android:layout_height="62dp"
            android:fontFamily="@font/aldrich"
            android:gravity="right|center_vertical"
            android:shadowColor="#040202"
            android:text="@string/chapitre"
            android:textColor="#AE5959"
            android:textSize="44sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/NumeroChapitre"
            android:layout_width="200dp"
            android:layout_height="62dp"
            android:fontFamily="@font/aldrich"
            android:gravity="center"
            android:shadowColor="#040202"
            android:text="1"
            android:textColor="#AE5959"
            android:textSize="44sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonMenu"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:fontFamily="@font/aldrich"
        android:text="@string/page_titre"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#1093CD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#000000" />

</androidx.constraintlayout.widget.ConstraintLayout>